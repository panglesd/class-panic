<!DOCTYPE html>
<html lang="en">
    <head>
	<meta charset="utf-8">
	<title>Connection</title>
	<link rel="stylesheet" href="/stylesheets/css_reset.css">
	<link rel="stylesheet" href="/stylesheets/login.css">
    </head>
    <body>
	<div id="createAccount">
	  <h2>Cr&eacute;er un compte</h2>
	  <div class="msg">
	    <ul>
	      <% if(typeof msgs == 'object' && msgs) {
		 msgs.forEach(function (msg) { %>
	      <li> <%= msg %> </li>
	      <% });} %>
	    </ul>
	  </div>
	  <a href= "login/">Déjà un compte ?</a>
	  <form method="post" action="<%= config.PATH %>/user/create">
	    <table>
	      <tr>
		<td>Pseudo :</td><td><input type="text" name="pseudo"></td>
	      </tr>
	      <tr>
		<td>Password :</td><td><input type="password" name="password"></td>
	      </tr>
	      <tr>
		<td>Nom complet :</td><td><input type="text" name="nomComplet"></td>
	      </tr>
	      <tr>
		<td>Email :</td><td><input type="text" name="email"></td>
	      </tr>
	      <tr>
		<td>Mot de passe pour être admin :</td><td><input type="password" name="adminPassword"></td>
	      </tr>
	      <tr>
		<td></td><td><input type="submit" value="Cr&eacute;er compte"></td>
	      </tr>
	    </table>
	  </form>
	</div>
    </body>
</html>
