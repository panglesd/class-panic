<%- include('admin_header'); -%>

<h2> Renommber ou supprimer "<%= set.name%>"</h2>
<form action="/classPanic/manage/set/<%=set.id%>/update" method="post">
    Name : <input name="name" value="<%= set.name %>"> <br>
    <input type="submit" value="Modifier">
</form>

<h2>Ou la supprimer</h2>

<form onsubmit='return confirm("Etes-vous sure de vouloir supprimer le set \"<%=set.name%>\" ?");' action="/classPanic/manage/set/<%=set.id%>/delete" method="post">
    Irréversible : <input type="submit" value='Supprimer le set "<%= set.name%>"'>
</form>


<h2> Votre set "<%= set.name %>" contient les questions suivantes :</h2>
<!--	Vous pouvez vous connecter &agrave; l'une des salles suivantes :-->
<ul class="room sortable-list">
    <% questionList.forEach(function(q) { %>
	<li class="question">
		<span class="froom"><%= q.enonce %></span>
		<div>
			<a class="room" href="/classPanic/set/<%= set.id %>/question/<%= q.id %>"> Modifier </a>
		</div>
	</li>
    <% });%>
    </ul>
    <ul>
    <li class="room">
	<span class="froom">Créer une nouvelle question</span>
<!--	<div>
	    <ul> <li> Modifier </li> <li> Supprimer </li> </ul>
	</div> -->
    </li>
</ul>

<a style="display:block; margin:40px;" href="/classPanic/manage/set"> Retourner à la liste des sets </a>
<script src="/javascripts/Sortable.js">
 </script>
 <script> Sortable.create(document.querySelector('.sortable-list'));
</script>

<%- include('admin_footer'); -%>
